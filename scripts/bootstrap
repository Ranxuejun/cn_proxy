#!/bin/bash -l
# Bootstrap Ubuntu 10.10 EC2 instance for cnproxy.
#
# Designed to work with ami-cef405a7 or equivalent.

### Make sure we have latest updates
aptitude update
aptitude upgrade -y

### Misc
aptitude install -y zlib1g-dev libssl-dev libreadline5-dev build-essential

### Raptor (for rdf-raptor gem)
aptitude install -y libraptor1 libraptor-dev raptor-utils

### Xml
aptitude install -y libxslt-dev libxml2-dev

### Ruby
aptitude install -y ruby1.8 ruby1.8-dev rubygems1.8

### Curl
aptitude install -y curl

### Git
aptitude install -y git-core

### Apache
aptitude install -y apache2

### Gems for cnproxy
gem install tilt rack sinatra rspec rspec-core rspec-expectations rspec-mocks thin capistrano crack json rdf rdf-raptor rdf-json rdf-n3 uuid thin rake

