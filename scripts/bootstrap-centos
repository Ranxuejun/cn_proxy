#!/bin/bash -l
# Bootstrap CentOS instance for cnproxy.

DEPLOYUSER="deploy"
DEPLOYHOME="/home/$DEPLOYUSER"
DEPLOYKEY="ssh-rsa  gbilder@Yagharek.local"

WEBAPPSHOME="/home/webapps"

GEMS="tilt rack sinatra rspec rspec-core rspec-expectations rspec-mocks passenger capistrano crack json rdf rdf-raptor rdf-json rdf-n3 uuid fog unidecode nokogiri oai memcache-client nokogiri execjs"

# TODO Find CentOS equivalents of these debian packages.
PACKAGES="linux-headers-generic libsqlite3-dev gcc g++ build-essential zlib1g-dev libssl-dev libreadline5-dev build-essential libraptor1 libraptor-dev raptor-utils libxslt-dev libxml2-dev curl git-core apache2 apache2-dev memcached"

OUTFILE="/home/ubuntu/bootstrap.log"

echo "Bootstrapping... see $OUTFILE for output."
touch $OUTFILE

### Install package deps
echo "Installing package dependencies..."
yum -qy upgrade &>>$OUTFILE
yum -qy install $PACKAGES &>>$OUTFILE

### Compile and install ruby
echo "Downloading ruby..."
wget -q ftp://ftp.ruby-lang.org//pub/ruby/1.9/ruby-1.9.2-p180.tar.gz

echo "Compiling and installing ruby..."
tar zxvf ruby-1.9.2-p180.tar.gz &>>$OUTFILE
cd ruby-1.9.2-p180/
./configure --prefix=/usr/local/ruby &>>$OUTFILE
make &>>$OUTFILE
make install &>>$OUTFILE

echo "PATH=\"/usr/local/ruby/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin:/usr/games\"" > /etc/environment
source /etc/environment

### Install gem deps
echo "Installing gem dependencies..."
gem update &>>$OUTFILE
gem install --quiet --no-rdoc --no-ri $GEMS &>>$OUTFILE

### Install Apache2 passenger module
echo "Installing mod_passenger..."
passenger-install-apache2-module --auto

### Create a deploy user
echo "Creating deploy user..."
ADDUSER="adduser --gecos \"\" --disabled-password $DEPLOYUSER"
echo $ADDUSER >adduser_tmp.$$
sh adduser_tmp.$$ &>>$OUTFILE
rm adduser_tmp.$$

### Hand over an ssh pk for deploy
echo "Copying deploy key..."
mkdir -p $DEPLOYHOME/.ssh
echo $DEPLOYKEY >/home/deploy/.ssh/authorized_keys2
chown -R $DEPLOYUSER.$DEPLOYUSER $DEPLOYHOME/.ssh

### Create the webapps deployment directory
echo "Creating webapps dir..."
mkdir -p $WEBAPPSHOME
chown -R $DEPLOYUSER.$DEPLOYUSER $WEBAPPSHOME

### Enable mod_passenger
#echo "Enabling mod_passenger... (don't do this manually!)"
#cat >> /etc/apache2/apache2.conf <<CONF
#LoadModule passenger_module /usr/local/ruby/lib/ruby/gems/1.9.1/gems/passenger-3.0.7/ext/apache2/mod_passenger.so
#PassengerRoot /usr/local/ruby/lib/ruby/gems/1.9.1/gems/passenger-3.0.7
#PassengerRuby /usr/local/ruby/bin/ruby
#CONF
